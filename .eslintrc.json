{
  "ignorePatterns": ["dist", "node_modules"],
  "rules": {
    "object-curly-spacing": [1, "always"],
    "semi": [1, "never"]
  },
  "env": {
    "browser": true,
    "es6": true
  },
  // "extends": ["eslint:recommended", "airbnb-base", "prettier"],
  // "globals": {
  //   "Atomics": "readonly",
  //   "SharedArrayBuffer": "readonly"
  // },
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "config/webpack.common.js"
      }
    }
  }
}
